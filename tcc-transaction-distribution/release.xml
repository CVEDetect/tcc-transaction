<?xml version="1.0" encoding="UTF-8"?>

<assembly>
    <id>${project.version}</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>server/conf/**</include>
                <include>dashboard/conf/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <includes>
                <include>server/bin/*</include>
                <include>dashboard/bin/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../tcc-transaction-server/target/tcc-transaction-server.jar</source>
            <outputDirectory>server/lib/</outputDirectory>
        </file>
        <file>
            <source>../tcc-transaction-dashboard/target/tcc-transaction-dashboard.jar</source>
            <outputDirectory>dashboard/lib/</outputDirectory>
        </file>
    </files>
</assembly>
